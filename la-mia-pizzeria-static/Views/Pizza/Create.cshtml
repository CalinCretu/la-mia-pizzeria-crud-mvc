@using la_mia_pizzeria_static.Data
@model Pizzas
<div class="container">
    <form asp-controller="Profile" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Name" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Cognome:</strong>
            <input asp-for="Lastname" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Età:</strong>
            <input asp-for="Age" class="d-block w-100" />
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>